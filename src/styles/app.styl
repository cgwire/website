lightgrey = #F5F5F5
mediumgrey = #999999
darkgrey = #1F1F28
cgwiregreen = #00B242
cgwiregreen-alt = #67BE4B
rainbow-1 = #FF6BC2
rainbow-2 = #C149C4
rainbow-3 = #8A53D1
rainbow-4 = #92D277
rainbow-5 = #2BD1B8
rainbow-6 = #24C15E
rainbow-7 = #257CDE
rainbow-8 = #4C4BA2
rainbow-9 = #FFAB0D
rainbow-10 = #25B1F3
rainbow-11 = #FF700D
rainbow-12 = #9BBE27
rainbow-13 = #FF195E
rainbow-14 = #CE2358


html
body
    margin 0
    font-family 'Lato', sans-serif
    font-size 18px

// Base

.hidden
    display none

body
    a
        color cgwiregreen

    a:hover
        color cgwiregreen-alt

.section
    max-width calc(960px + 1.5rem * 2)
    margin auto


    .intro-video
        max-width 90%

    .block
        margin 4em 0 0 0

        h3
            margin-top 1em

        &.middle-block
            margin-top 6em
            margin-bottom 4em

    .screenshot
        border-radius 0.5em
        border 1px solid #EEE
        box-shadow 0 0 6px 3px #F1F1F1

.section-list
    list-style none
    padding 0
    margin 0

.section-item
    padding 1.5rem
    text-align center

.section-item-img
    display flex
    align-items center
    justify-content center
    position relative
    min-height 10rem
    margin-bottom 1rem

    &:before
        position absolute
        z-index 1
        top 50%
        left 50%
        transform translateX(-50%) translateY(-50%)
        content ""
        display block
        width 10rem
        height 10rem
        background-color white
        border-radius 50%

    img
        position relative
        z-index 1

.section-item-title
    margin-bottom .5rem
    font-size 1.5rem
    font-weight bold

.section-item-text
    font-size 1.1rem

.pr0-5
    padding-right .5rem

.pr1
    padding-right 1rem

.pl0-5
    padding-left .5rem

.pl1
    padding-left 1rem

.mt2
    margin-top 2rem

.filler
    margin-bottom 14em

.flexrow
    display flex
    align-items center

.flexrow-item
    flex 1
    align-items center
    margin-right 2em

.flex-aic {
    align-items center
}

.flex-jcfe {
    justify-content flex-end
}

h2.subtitle
    margin-top 1em
    margin-bottom 1em
    font-size 1.5em
    text-align center

h2.subtitle.tagline
    font-size 1.9em
    line-height 1.3em
    max-width 550px
    margin auto
    font-weight bold
    margin-bottom 1em

p.tagline-explaination
    font-size 1.1em
    color #1F1F28
    line-height 1.5em
    margin-bottom 2em

.block-colored
    background-color lightgrey

    .button--alt
    .button--alt:focus
        color mediumgrey
        background-color transparent
        border 1px solid mediumgrey

    .button--alt:hover
        color white
        background-color mediumgrey
        border-color mediumgrey

.block-colored--dark
    background-color darkgrey
    color white

    .section-subtitle
    .section-title
        color white

    .button--alt
    .button--alt:focus
        color white
        background-color transparent
        border 1px solid white

    .button--alt:hover
        color darkgrey
        background-color white
        border-color white

    .screenshot
        box-shadow 0 0 6px 3px darkgrey - 10%
        border 1px solid darkgrey

.button
.button:focus
    color white
    background-color: cgwiregreen
    border 1px solid cgwiregreen
    border-radius 2em
    padding 1.2em

.button:hover
    color white
    background-color cgwiregreen-alt
    border 1px solid cgwiregreen-alt

.button--alt
.button--alt:focus
    color cgwiregreen
    background-color white
    border 1px solid cgwiregreen

.button--alt:hover
    color cgwiregreen
    background-color alpha(cgwiregreen, .1)
    border-color cgwiregreen

.button--transparent
.button--transparent:focus
    color cgwiregreen
    background-color transparent
    border 1px solid transparent

.button--transparent:hover
    color cgwiregreen-alt
    background-color transparent
    border-color transparent

.button--with-icon
    display inline-flex
    justify-content space-between
    img
        margin-right .5rem

.button.is-large
    font-size 1.2em

.button.is-multiline
    white-space normal
    padding .5em 1.2em
    height auto

.input:focus
    border 1px solid cgwiregreen-alt

.choice-wrapper
    align-items stretch
    margin-top 4em
    margin-bottom 2em

.choice-tile
    padding-right .5rem

    & + &
        padding-right 0
        padding-left .5rem

.choice
    display flex
    flex-direction column
    justify-content space-between
    height 100%
    border 1px solid cgwiregreen
    border-radius 1.11rem
    padding 2.4rem 1.2rem

// Pages and partials

header
    .navbar
        max-width 960px
        margin auto
        font-size 1em

    a.navbar-lang-item
        font-size 0.8em
        margin 0.1em
        width 30px
        color #BBB

    .navbar-link:after
        border-color cgwiregreen-alt

    .navbar-link
        margin-left 0
        padding-left 0

    .navbar-link
    .navbar-item
        color darkgrey

        img.icon
            max-width 25px
            margin-right 1em

    .navbar-link:hover
    .navbar-item:hover
        background transparent
        color darkgrey

    .navbar-item.active
        span.navbar-item-title
            box-sizing border-box
            box-shadow inset 0 -3px 0 0 cgwiregreen

    .navbar-item.has-dropdown
        span.navbar-item-title
            margin-left: 1em

    .navbar-item.signup
        border-radius 1em
        background cgwiregreen
        color white
        margin 0.5em
        padding 0.5em 1em

    .navbar-dropdown
        border-top 0px

    .navbar img
        max-height 2.5em

    .navbar-lang-item.active
        color black

section
    .tutorial-links a
        margin-top 1em
        margin-right 1em

    &.introduction
        padding-top 5em

        h1.title
            font-weight bold
            font-size 2.2em
            line-height 1.3em

        h2.main-subtitle
            font-size 1.1em
            font-weight 400
            color #1F1F28
            line-height 1.5em
            margin-bottom 2em

        a.button
            font-weight bold
            font-size 1.1em
            border-radius 2em
            padding 1.3em

    &.clients
        img
            width 150px

    &.conclusion
        padding-bottom 0
        margin-bottom 0

        img
            top 35px
            position relative

        &.conclusion-text.content
            margin-bottom 0

        &.conclusion-picture.content
            margin-bottom 0
            margin-top 0
            padding-top 0

    &.use-case
        h2.subtitle
            text-align left

.landing-block
    &.content
        margin-bottom 2em
        padding-bottom 1em

    .landing-text
        p
            max-width 300px
            margin auto

        h2.subtitle
            max-width 300px
            font-weight bold
            line-height 1.4em
            text-align left
            margin 0em auto 1em auto

.community
    img
        width 250px

    .level
        display flex

    .level-item
        width 50%

    .description
        p
            padding-top 0

    .level.block
        margin 0.5em 0

    .community-link
        color cgwiregreen

.ppl
    padding 1.5rem

.ppl-image
    margin 0 auto
    max-width 150px
    img
        width 150px
        border-radius 50%

.ppl-id
    margin 1.3rem 0 1.5rem
    text-align center

    .ppl-id-name
        margin-bottom 0
        font-size 1.5rem
        font-weight bold

    .ppl-id-role
        font-size 1.1rem
        color: mediumgrey

.ppl-description
    flex 1

.advisors
    .ppl-id
        .ppl-id-name
            font-size 1em
        .ppl-id-role
            font-size 1em

section.partners
    padding 0

    img
        width 200px

.community a
    color inherit

.community a:hover
    color inherit

section.pricing
    max-width 1200px

    .frequence
        padding 0.5em
        height auto
        background white
        color cgwiregreen

        &.active
            background cgwiregreen
            color white

.pricings
    display flex
    flex-direction row
    margin-top 2em
    margin-bottom 2em
    flex-wrap wrap

.pricing-block
    flex 1
    text-align center
    margin 1em
    min-height 400px
    min-width 180px
    max-width 225px
    box-shadow 0 4px 16px rgba(0, 100, 0, 0.2)
    background white
    border-radius 1em
    display flex
    flex-direction column

    .pricing-title
        font-size 1.3em
        font-weight bold
        color #999
        padding 0.8em

    .pricing-price
        .pricing-currency
            font-size 0.9em

        .pricing-value
            font-size 1.8em

    .pricing-price-info
        font-size 0.8em
        color #999
        font-style italic

    .pricing-features
        flex 1
        padding 1em

        ul
            margin 0
            list-style-type none

        li
            padding 0.5em 0
            font-size 0.9em
            color #888
            border-bottom 1px solid #EEE

    .pricing-text
        align-items center
        display flex
        color #999

    .pricing-cta
        padding 1em

        .button.is-outlined
            border 1px solid cgwiregreen-alt
            background white
            color cgwiregreen-alt
            width 100%
            transition transform 0.3s ease

        .button.is-outlined:hover
            transform scale(1.05)

.pricing-emphasize
    transform: scale(1.05)
    border 1px solid cgwiregreen-alt

.school-details
    box-shadow 0 4px 16px rgba(0, 50, 0, 0.2)
    border-radius 5px
    padding 0.6em
    margin 0 1em
    color #666

.pricing-details
    color #999
    font-style italic

.section-title
    display block
    font-weight 900
    font-size 3.33rem
    margin-bottom 2rem

.kitsu-page
    .section-title
        font-size 2.5rem
        margin-bottom 1rem

.section-subtitle
    display block
    margin-bottom .9rem
    font-size 1.11rem
    letter-spacing .22em
    text-transform uppercase
    color #54656F

.js-tabs
    display flex
    align-items flex-start
    margin-top 3.5rem
    .js-tablist
        box-sizing border-box
        flex 0 0 33%
        list-style none
        padding 0 1em 0 0
        margin 0
    .js-tablist__link
        display flex
        align-items center
        justify-content flex-start
        padding .5rem 1rem
        border-radius .55rem
        opacity .4
        color darkgrey
        font-size 1.1em
        font-weight bold

        &:active
        &:focus
        &[aria-selected=true]
            background-color alpha(cgwiregreen, .1)
            opacity 1
            outline 0

        img
            margin-right 1.28rem
            width 2.8rem
            flex 0 0 auto

    .js-tabcontent
        box-sizing border-box
        flex: 1 1 66%
        background-color lightgrey
        border-radius .55rem
        padding 2.22rem

.quote
    background-color lightgrey
    padding 6.5rem

.quote-text
    border-left 8px solid cgwiregreen
    padding-left 2.22rem
    line-height 1.3
    font-size 2em
    font-weight bold
    color #54656F

    p:before
        content "“"

    p:after
        content "”"

.quote-author
    display flex
    align-items center
    margin-top .8rem
    font-size 1.45rem
    color cgwiregreen
    font-weight normal

.quote-avatar
    border-radius 50%
    margin-right .8rem
    flex 0 0 auto
    width 50px
    height 50px

.quote-text--alt
    border-color rainbow-3

    .quote-author
        color rainbow-3

.check-list
    list-style none
    margin 0 0 2.5rem
    padding 0
    font-size 1.22em
    line-height 1.8

    li::before
        content ""
        display inline-block
        width 1.25rem
        height 1rem
        margin-right .8rem
        background url('/images/check.svg') 0 0 / contain no-repeat

.customers
    list-style none
    margin 0
    padding 0
    display flex
    align-items flex-start
    flex-wrap wrap

.customers-item
    flex 0 0 auto
    width 9.95rem
    height 9.95rem
    margin 0
    padding 1rem
    display flex
    align-items center
    justify-content center
    color white

    &:nth-child(14n+1)
        background-color rainbow-1
    &:nth-child(14n+2)
        background-color rainbow-2
    &:nth-child(14n+3)
        background-color rainbow-3
    &:nth-child(14n+4)
        background-color rainbow-4
    &:nth-child(14n+5)
        background-color rainbow-5
    &:nth-child(14n+6)
        background-color rainbow-6
    &:nth-child(14n+7)
        background-color rainbow-7
    &:nth-child(14n+8)
        background-color rainbow-8
    &:nth-child(14n+9)
        background-color rainbow-9
    &:nth-child(14n+10)
        background-color rainbow-10
    &:nth-child(14n+11)
        background-color rainbow-11
    &:nth-child(14n+12)
        background-color rainbow-12
    &:nth-child(14n+13)
        background-color rainbow-13
    &:nth-child(14n+14)
        background-color rainbow-14

.customers--spread
    .customers-item
        flex 1 1 9.95rem

.trial
    position relative

    &:after
        content ''
        position absolute
        bottom 0
        left 0
        right 0
        height 7.2%
        background-color cgwiregreen
        z-index 1

.trial-content
    position relative
    bottom 0
    z-index 2
    background transparent url('/images/illustration-free-trial.svg') bottom center / contain no-repeat

.content-image
    padding-left 3rem

.content-reverse
    flex-direction row-reverse

    .content-image
        padding-left 0
        padding-right 3rem

.modal
    iframe
        position absolute
        top 0
        left 0

.footer
    background cgwiregreen
    color white
    font-size 1.1em
    padding 0

    a
        color white

        &:hover
            color white
            text-decoration underline

    .columns
        padding-top 2em
        padding-bottom 2em
        max-width: 920px
        margin: 0 auto

    .address
        color #999
        padding-left 20px

    .column
        padding-top 1.8em

    .logo-column
        padding-top 1.2em

    .footer-title
        font-weight bold
        text-transform capitalize
        font-style capitalize
        margin-bottom 1em
        font-size 1.15em
        padding 0

    .footer-of-footer
        background white
        color darkgrey
        padding 1em

    li
        display flex
        margin-bottom 1em

    img
        margin 0 1em 0em 0

.cookie-consent
    background cgwiregreen
    color white
    bottom 0
    left 0
    width 100%
    padding 1em
    position fixed
    max-height 70px
    align-item center
    z-index 200

    .flexrow-item
        flex auto

    p.text
        flex 1

    p.cookie-choice
        max-width 150px
        padding 0
        margin-right 30px
        flex none

    button,
    button:focus,
    button:active
        max-width 100px
        border-radius 0
        padding 0.3em
        margin-left 1em

    .default
        border 2px solid white

.js-tabs
    [aria-hidden]
        display none

// Responsive

@media(max-width: 800px)

    .cookie-consent
        max-height 100%
        overflow-y auto
        flex-direction column

        button
            padding 0.5em

        p.choice
            margin-top 0.5em
            margin-right 0

    h1.title
        font-size 1.6em
        margin-bottom 0

    h2.subtitle.tagline
        font-size 1.6em

    .section.content
        padding 1em

        h3
            margin-top 0.2em

    pre
        padding 1em 0
        font-size 0.7em

    header
        a.navbar-lang-item
            text-align center

    .landing-block
    .introduction
        .flexrow
            flex-direction column

        .flexrow.reverse
            flex-direction column-reverse

        .flexrow-item
            width 100%
            margin-right 0

        .landing-text
        .landing-picture
        .introduction-text
            margin-bottom 2em

    .tutorial-links a
        margin-right 0
        font-size 0.8em

    .block
        flex-wrap wrap

        &.flexrow
            margin-bottom 0

        .flexrow-item
            min-width 300px
            width 100%
            margin-right 0

        .level-item
            width 100%

    .ppl
        flex-direction column

        .flexrow-item
            margin-right 0

        .ppl-image
            margin-bottom 1em

    .content table
        font-size 0.7em

    .community
        .description
            p
                padding-left 0
                padding-right 0

    .js-tabs
        flex-direction column

    .js-tablist
        flex-basis 100%
        display flex
        flex-wrap wrap
        padding 0

    .quote
        padding 3em
        font-size 0.6em

    .quote-author
        font-size 0.7em

    .trial::after
        display none

    .trial-content
        background none

    .choice-tile
        padding 0 0 1rem 0

        & + &
            padding 0 0 1rem 0

    .content-image
    .content-reverse .content-image
        padding 2rem 0 0 0

